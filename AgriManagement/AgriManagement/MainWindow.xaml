                            <DataGridTextColumn Header="温度" Width="100" Binding="{Binding temperature}"/>
                            <DataGridTextColumn Header="时间" Width="200" Binding="{Binding time}"/>
                            <DataGridTextColumn Header="状态" Width="100" Binding="{Binding status}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
