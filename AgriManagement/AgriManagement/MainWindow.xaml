                    <ComboBox x:Name="cmb_areachat" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectionChanged="cmb_areachat_SelectionChanged"/>
                    <ComboBox x:Name="cmb_nodechat" Margin="150,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectionChanged="cmb_nodechat_SelectionChanged"/>
                    <Canvas Name="cav_chat" Width="700" Height="740" Grid.ColumnSpan="2" Margin="23,10,23,11" HorizontalAlignment="Left" VerticalAlignment="Top">
                    </Canvas>
                    <ScrollViewer Grid.Column="1" Name="scrollViewer3" VerticalScrollBarVisibility="Auto" Margin="880,50,0,0">
