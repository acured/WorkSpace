        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AgriManagement"
        mc:Ignorable="d"
        Title="监控系统电脑控制端" Height="820" Width="1080" Closed="Window_Closed">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="760" Margin="10,10,0,0" VerticalAlignment="Top" Width="1052">
            <TabItem Header="实时信息">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="txt_port" HorizontalAlignment="Left" Height="23" Margin="874,21,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="71"/>
                    <Button x:Name="btn_start" Content="启动" HorizontalAlignment="Left" Margin="950,21,0,0" VerticalAlignment="Top" Width="75" Click="btn_start_Click"/>
                    <ScrollViewer Name="scrollViewer1" VerticalScrollBarVisibility="Auto" Margin="10,0,200,10">
                        <Canvas Name="cav_show" Width="800" Height="600" HorizontalAlignment="Left" VerticalAlignment="Top" />
                    </ScrollViewer>
                    <CheckBox x:Name="cb_1" Content="" HorizontalAlignment="Left" Margin="899,84,0,0" VerticalAlignment="Top" Checked="cb_1_Checked" Unchecked="cb_1_Unchecked"/>
                    <CheckBox x:Name="cb_2" Content="" HorizontalAlignment="Left" Margin="899,104,0,0" VerticalAlignment="Top" Checked="cb_1_Checked" Unchecked="cb_1_Unchecked"/>
                    <CheckBox x:Name="cb_3" Content="" HorizontalAlignment="Left" Margin="899,124,0,0" VerticalAlignment="Top" Checked="cb_1_Checked" Unchecked="cb_1_Unchecked"/>
                    <CheckBox x:Name="cb_4" Content="" HorizontalAlignment="Left" Margin="899,144,0,0" VerticalAlignment="Top" Checked="cb_1_Checked" Unchecked="cb_1_Unchecked"/>
                </Grid>
            </TabItem>
            <TabItem Header="趋势展示" Margin="-2,0,-2,-2">
